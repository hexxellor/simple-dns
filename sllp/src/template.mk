
########################################################################
#			Default Targets
########################################################################

.PHONY: all exe dirs clean 

all : exe dirs
exe : $(EXE)
dirs: $(DIRS)

########################################################################
#			Compilers
########################################################################

CC = gcc
CPP = g++

########################################################################
#			Executable Program Rules
########################################################################

$(EXE) : $(CPP_SRCS:.cpp=.o) $(C_SRCS:.c=.o)
	$(CPP) $(CPPFLAGS) $(LIBS) -o $@ $^ 


########################################################################
#			Subdirectories
########################################################################

dirs: $(DIRS)

ifdef DIRS
.PHONY: $(DIRS)
$(DIRS):
	@if [ -e $@/Makefile ] ; then $(MAKE) -C $@ $(MAKECMDGOALS) ; fi
endif

########################################################################
#			Implicit Rules
########################################################################

%.o: %.c
	$(CC) $(CFLAGS) $(INCS) -c $<


%.o: %.cc
	$(CPP) $(CPPFLAGS) $(INCS) -c $<


%.d: %.c
	@set -e; rm -f $@; $(CC) -MM $(CFLAGS) $(INCS) $< > $@.$$$$; sed 's,\($*\)\.o[ :]*,.o $@ : ,g' < $@.$$$$ > $@; rm -f $@.$$$$


%.d: %.cc
	@set -e; rm -f $@; $(CPP) -MM $(CPPFLAGS) $(INCS) $< > $@.$$$$; sed 's,\($*\)\.o[ :]*,.o $@ : ,g' < $@.$$$$ > $@; rm -f $@.$$$$


########################################################################
#			Cleanup Rules
########################################################################

clean: $(DIRS)
	rm -f *.o *.d *.d.* $(EXE)

########################################################################
#			Dependencies
########################################################################

-include $(CPP_SRCS:.cc=.d) $(C_SRCS:.c=.d)